<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Desafio Flexy Digital!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<div class="container">
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<a class="navbar-brand" href="{{ path('welcome') }}">Home</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('product_index') }}">Produtos</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('tag_index') }}">Tags</a>
							</li>
						</ul>
					</div>
				</nav>
				<div class="mt-2">
					{% include 'includes/messages.html.twig' %}
				</div>
				{% block body %}{% endblock %}
			</div>
			{% block javascripts %}{% endblock %}
		</body>
	</html>

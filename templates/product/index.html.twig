{% extends 'base.html.twig' %}

{% block body %}
	<div>

		<h1 class="text-center mt-4 mb-4">Listagem de Produtos</h1>

		<a href="{{ path('product_create') }}" class="btn btn-sm btn-success ">
			<i class="fas fa-plus"></i>Adicionar</a>
		<hr>

		<ol class="breadcrumb float-right">
			<li class="breadcrumb-item">
				<a href="{{ path('welcome') }}">Home</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('product_index') }}">Produtos</a>
			</li>
		</ol>


		<table class="table table-striped">
			<thead>
				<tr>
					<th>id</th>
					<th>Titulo</th>
					<th>Preço</th>
					<th>Descrição</th>
					<th>Estoque</th>
					<th>Tags</th>
					<th>Ações</th>
				</tr>
			</thead>

			<tbody>
				{% for product in product %}
					<tr>
						<td>
							{{ product.id }}
						</td>
						<td>
							{{ product.title }}
						</td>
						<td>
							{{ product.price }}
						</td>
						<td>
							{{ product.description }}
						</td>
						<td>
							{{ product.stock }}
						</td>
						<td>
							{{ product.tagCollection.name }}
						</td>
						<td>
							<a href="{{ path('product_edit', {'id':product.id}) }}" class="btn btn-sm btn-primary">Editar</a>
							<a href="{{ path('product_remove', {'id':product.id}) }}" class="btn btn-sm btn-danger">Remover</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
{% block title %}
	Litagem de Produtos
{% endblock %}

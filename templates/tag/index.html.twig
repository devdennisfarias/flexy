{% extends 'base.html.twig' %}

{% block title %}Listagem de Tags
{% endblock %}

{% block body %}
	<h1 class="text-center mt-4 mb-4">Listagem de Tags</h1>

	<a href="{{ path('tag_create') }}" class="btn btn-sm btn-success ">
		<i class="fas fa-plus"></i>Adicionar</a>
	<hr>
	<ol class="breadcrumb float-right">
		<li class="breadcrumb-item">
			<a href="{{ path('welcome') }}">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('tag_index') }}">Tags</a>
		</li>
	</ol>

	<table class="table table">
		<thead class="align-middle">
			<tr>
				<th>#</th>
				<th>Tag</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			{% for tag in tag %}
				<tr>
					<td>{{ tag.id }}</td>
					<td>{{ tag.name }}</td>
					<td>
						<a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-sm btn-primary">Editar</a>
						<a href="{{ path('tag_remove', {'id': tag.id}) }}" class="btn btn-sm btn-danger">Apagar</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
